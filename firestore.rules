rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;

      // Allow users to read and write to their own sentFriendRequests subcollection
      match /sentFriendRequests/{friendId} {
        allow read, write, delete: if request.auth != null;
      }

      // Allow users to write to other users' receivedFriendRequests subcollection
      match /receivedFriendRequests/{friendId} {
        allow read, write, delete: if request.auth != null;
      }
    }
    // Rules for other collections...
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.resource.data.author == request.auth.uid;
    }

    match /groups/{groupId} {
      allow read, write: if request.auth != null;

      match /messages/{messageId} {
        allow read, create: if request.auth != null;
      }
    }

    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.users;

      match /messages/{messageId} {
        allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
      }
    }
  }
}
